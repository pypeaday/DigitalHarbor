---
import { Mail, Github, Anchor } from 'lucide-astro';

const currentYear = new Date().getFullYear();
---

<footer class="py-12 border-t border-slate-800">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col items-center">
      <!-- Brand -->
      <p class="text-slate-500 text-sm mb-6">
        Link pages · QR codes · Managed hosting
      </p>
      
      <!-- Social links -->
      <div class="flex justify-center gap-2 mb-6">
        <a 
          href="mailto:nic@mydigitalharbor.com" 
          class="p-2 rounded-md text-slate-500 hover:text-teal-400 hover:bg-teal-500/10 transition-all"
          aria-label="Email us"
        >
          <Mail class="w-4 h-4" />
        </a>
        <a 
          href="https://github.com/DigitalHarbor7" 
          target="_blank"
          rel="noopener noreferrer"
          class="p-2 rounded-md text-slate-500 hover:text-teal-400 hover:bg-teal-500/10 transition-all"
          aria-label="GitHub"
        >
          <Github class="w-4 h-4" />
        </a>
      </div>
      
      <!-- Copyright -->
      <p class="text-slate-600 text-xs">
        &copy; {currentYear} Digital Harbor
      </p>
    </div>
  </div>
</footer>
