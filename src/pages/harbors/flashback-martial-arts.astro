---
import LinkPageLayout from '../../layouts/LinkPageLayout.astro';

const title = "Flashback Martial Arts";
const description = "Flashback Martial Arts - BJJ and Striking Arts in Appleton, WI";
const tagline = "道場 • Dojo";
const bio = "A Martial Arts community specializing in BJJ and Striking Arts. Train with purpose, grow with discipline.";
---

<LinkPageLayout 
  title={title} 
  description={description}
  image="/images/FlashbackRound.jpg"
  themeColor="#C41E3A"
  bgGradient="from-[#0a0a0a] via-[#121212] to-[#0a0a0a]"
>
  <link slot="head" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

  <style>
    :root {
      --crimson: #C41E3A;
      --gold: #D4AF37;
      --ink: #1a1a1a;
    }

    * { font-family: 'Inter', sans-serif; }
    .jp-text { font-family: 'Noto Sans JP', sans-serif; }

    /* Subtle pattern background */
    .dojo-bg {
      position: fixed;
      inset: 0;
      background: 
        radial-gradient(ellipse at top, rgba(196, 30, 58, 0.08) 0%, transparent 50%),
        radial-gradient(ellipse at bottom right, rgba(212, 175, 55, 0.05) 0%, transparent 50%);
      pointer-events: none;
      z-index: 0;
    }

    /* Decorative kanji */
    .kanji-bg {
      position: fixed;
      font-family: 'Noto Sans JP', sans-serif;
      font-size: 12rem;
      font-weight: 700;
      color: rgba(196, 30, 58, 0.03);
      pointer-events: none;
      z-index: 0;
    }

    .kanji-1 { top: 10%; right: -40px; }
    .kanji-2 { bottom: 5%; left: -30px; }

    /* Profile image */
    .profile-container {
      position: relative;
      display: inline-block;
    }

    .profile-glow {
      position: absolute;
      inset: -15px;
      background: radial-gradient(circle, rgba(196, 30, 58, 0.3) 0%, transparent 70%);
      filter: blur(15px);
      z-index: 0;
    }

    .profile-ring {
      position: absolute;
      inset: -4px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--crimson), var(--gold));
      z-index: 0;
    }

    .profile-img {
      position: relative;
      width: 110px;
      height: 110px;
      border-radius: 50%;
      border: 3px solid #0a0a0a;
      object-fit: cover;
      z-index: 1;
    }

    /* Main card */
    .dojo-card {
      background: rgba(18, 18, 18, 0.85);
      backdrop-filter: blur(16px);
      border: 1px solid rgba(196, 30, 58, 0.15);
      border-radius: 24px;
      overflow: hidden;
    }

    /* Title */
    .dojo-title {
      font-family: 'Noto Sans JP', sans-serif;
      font-size: 2rem;
      font-weight: 700;
      background: linear-gradient(135deg, #fff, #d4d4d4);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }

    /* Tagline */
    .tagline {
      font-family: 'Noto Sans JP', sans-serif;
      font-size: 0.9rem;
      color: var(--gold);
      letter-spacing: 3px;
    }

    /* Link buttons */
    .dojo-link {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem 1.25rem;
      background: rgba(196, 30, 58, 0.08);
      border: 1px solid rgba(196, 30, 58, 0.15);
      border-radius: 14px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .dojo-link::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
      background: linear-gradient(to bottom, var(--crimson), var(--gold));
      opacity: 0.5;
      transition: opacity 0.3s;
    }

    .dojo-link:hover {
      background: rgba(196, 30, 58, 0.15);
      border-color: rgba(212, 175, 55, 0.4);
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(196, 30, 58, 0.15);
    }

    .dojo-link:hover::before {
      opacity: 1;
    }

    .link-icon {
      width: 44px;
      height: 44px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, var(--crimson), #a01830);
      flex-shrink: 0;
    }

    /* Divider */
    .zen-divider {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      margin: 1.5rem 0;
    }

    .zen-line {
      height: 1px;
      width: 60px;
      background: linear-gradient(90deg, transparent, var(--crimson), transparent);
    }

    .zen-symbol {
      color: var(--gold);
      font-size: 0.75rem;
    }

    /* Quote */
    .quote-box {
      padding: 1rem;
      background: rgba(212, 175, 55, 0.05);
      border-left: 2px solid var(--gold);
      border-radius: 0 8px 8px 0;
    }

    /* CTA */
    .cta-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 14px 28px;
      background: linear-gradient(135deg, var(--crimson), #a01830);
      border-radius: 14px;
      font-weight: 600;
      color: white;
      transition: all 0.3s ease;
      box-shadow: 0 4px 20px rgba(196, 30, 58, 0.3);
    }

    .cta-btn:hover {
      transform: translateY(-3px) scale(1.02);
      box-shadow: 0 8px 30px rgba(196, 30, 58, 0.4);
    }

    /* Fade animations */
    .fade-in {
      opacity: 0;
      transform: translateY(15px);
      transition: all 0.6s ease;
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Reduced motion */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation: none !important;
        transition: none !important;
      }
    }
  </style>

  <!-- Background -->
  <div class="dojo-bg"></div>
  <div class="kanji-bg kanji-1">武</div>
  <div class="kanji-bg kanji-2">道</div>

  <div class="relative z-10 max-w-md mx-auto px-4 py-10">
    
    <!-- Header Card -->
    <div class="dojo-card p-8 mb-6 text-center fade-in">
      <!-- Profile -->
      <div class="profile-container mb-5">
        <div class="profile-glow"></div>
        <div class="profile-ring"></div>
        <img src="/images/FlashbackRound.jpg" alt="Flashback Martial Arts" class="profile-img">
      </div>

      <p class="tagline mb-2">{tagline}</p>
      <h1 class="dojo-title mb-3">{title}</h1>
      <p class="text-gray-400 text-sm leading-relaxed">{bio}</p>

      <div class="zen-divider">
        <div class="zen-line"></div>
        <span class="zen-symbol">✦</span>
        <div class="zen-line"></div>
      </div>

      <p class="text-gray-500 text-xs">Appleton, WI</p>
    </div>

    <!-- Links Section -->
    <div class="space-y-3 mb-6 fade-in">
      <a href="https://g.page/r/CbI7wMlSJO5XEBE/review" class="dojo-link group" target="_blank" rel="noopener">
        <div class="link-icon">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        </div>
        <div class="flex-1">
          <div class="text-white font-semibold">Leave a Review</div>
          <div class="text-gray-500 text-xs">Share your experience</div>
        </div>
        <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>

      <a href="https://www.flashbackmartialarts.com/" class="dojo-link group" target="_blank" rel="noopener">
        <div class="link-icon">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        </div>
        <div class="flex-1">
          <div class="text-white font-semibold">Dojo Website</div>
          <div class="text-gray-500 text-xs">flashbackmartialarts.com</div>
        </div>
        <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>

      <a href="http://www.facebook.com/FlashbackBJJ" class="dojo-link group" target="_blank" rel="noopener">
        <div class="link-icon">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
          </svg>
        </div>
        <div class="flex-1">
          <div class="text-white font-semibold">Facebook</div>
          <div class="text-gray-500 text-xs">@FlashbackBJJ</div>
        </div>
        <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>

      <a href="tel:9202058118" class="dojo-link group">
        <div class="link-icon">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </div>
        <div class="flex-1">
          <div class="text-white font-semibold">Contact Sensei</div>
          <div class="text-gray-500 text-xs">(920) 205-8118</div>
        </div>
        <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    <!-- Quote -->
    <div class="quote-box mb-6 fade-in">
      <p class="text-gray-400 text-sm italic">"The ultimate aim of martial arts is not having to use them"</p>
      <p class="text-gray-500 text-xs mt-1">— Miyamoto Musashi</p>
    </div>

    <!-- CTA -->
    <div class="text-center fade-in">
      <a href="https://www.flashbackmartialarts.com/" class="cta-btn" target="_blank" rel="noopener">
        <span>Begin Training</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
    </div>

  </div>

  <script>
    // Fade in animations
    function initAnimations() {
      const elements = document.querySelectorAll('.fade-in');
      elements.forEach((el, i) => {
        setTimeout(() => {
          el.classList.add('visible');
        }, 100 + (i * 150));
      });
    }

    document.addEventListener('DOMContentLoaded', initAnimations);
  </script>
</LinkPageLayout>
