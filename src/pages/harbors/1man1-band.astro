    }

    * { font-family: 'Inter', system-ui, sans-serif; }
    .font-display { font-family: 'Bebas Neue', sans-serif; }

    /* Spotlight/stage lighting effect */
    .stage-lights {
      position: fixed;
      inset: 0;
      background: 
        radial-gradient(ellipse 80% 50% at 50% 0%, rgba(245, 158, 11, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse 60% 40% at 20% 100%, rgba(245, 158, 11, 0.1) 0%, transparent 40%),
        radial-gradient(ellipse 60% 40% at 80% 100%, rgba(245, 158, 11, 0.1) 0%, transparent 40%);
      pointer-events: none;
      z-index: 0;
    }

    /* Animated sound waves */
    .sound-wave {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      height: 150px;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      gap: 3px;
      opacity: 0.15;
      pointer-events: none;
      z-index: 0;
    }

    .wave-bar {
      width: 4px;
      background: linear-gradient(to top, var(--gold), var(--gold-light));
      border-radius: 2px;
      animation: wave-pulse 1s ease-in-out infinite;
    }

    @keyframes wave-pulse {
      0%, 100% { height: 20px; }
      50% { height: var(--height, 60px); }
    }

    /* Profile image with golden ring */
    .profile-container {
      position: relative;
      display: inline-block;
    }

    .profile-ring {
      position: absolute;
      inset: -6px;
      border-radius: 50%;
      background: conic-gradient(from 0deg, var(--gold), var(--gold-light), var(--gold), var(--gold-dark), var(--gold));
      animation: ring-spin 4s linear infinite;
    }

    @keyframes ring-spin {
      to { transform: rotate(360deg); }
    }

    .profile-img {
      position: relative;
      width: 160px;
      height: 160px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid black;
      z-index: 1;
    }

    /* Glowing title */
    .glow-title {
      text-shadow: 
        0 0 20px rgba(245, 158, 11, 0.5),
        0 0 40px rgba(245, 158, 11, 0.3),
        0 0 60px rgba(245, 158, 11, 0.2);
    }

    /* Premium link cards */
