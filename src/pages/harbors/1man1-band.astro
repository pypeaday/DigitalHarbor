      position: relative;
      background: linear-gradient(135deg, rgba(39, 39, 42, 0.9), rgba(24, 24, 27, 0.95));
      border: 1px solid rgba(245, 158, 11, 0.2);
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .link-card::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, transparent 0%, rgba(245, 158, 11, 0.1) 100%);
      opacity: 0;
      transition: opacity 0.4s;
    }

    .link-card:hover {
      transform: translateY(-4px) scale(1.02);
      border-color: var(--gold);
      box-shadow: 
        0 20px 40px rgba(0, 0, 0, 0.4),
        0 0 30px rgba(245, 158, 11, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .link-card:hover::before {
      opacity: 1;
    }

    .link-card .icon-wrapper {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s;
    }

    .link-card:hover .icon-wrapper {
      transform: scale(1.1);
    }

    /* Gallery slideshow */
