---
import LinkPageLayout from '../../layouts/LinkPageLayout.astro';

const title = "Reveal Fitness";
const description = "Reveal Fitness - Community Gym in Green Bay";
const tagline = "Where Community Meets Strength";
const bio = "Join our community of dedicated individuals working to be 1% better every day. Your transformation starts here.";
---

<LinkPageLayout 
  title={title} 
  description={description}
  themeColor="#ef4444"
  bgGradient="from-[#0a0a0a] via-[#1a1a1a] to-[#0a0a0a]"
>
  <link slot="head" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

  <style>
    :root {
      --fire: #ef4444;
      --ember: #f97316;
      --steel: #71717a;
    }

    * { font-family: 'Inter', sans-serif; }
    h1, .brand-text { font-family: 'Oswald', sans-serif; }

    /* Energy background */
    .energy-bg {
      position: fixed;
      inset: 0;
      background: 
        radial-gradient(ellipse at top, rgba(239, 68, 68, 0.1) 0%, transparent 50%),
        radial-gradient(ellipse at bottom right, rgba(249, 115, 22, 0.08) 0%, transparent 50%);
      pointer-events: none;
      z-index: 0;
    }

    /* Animated pulse ring */
    .pulse-ring {
      position: absolute;
      inset: -8px;
      border-radius: 50%;
      border: 2px solid var(--fire);
      opacity: 0;
      animation: pulse-out 2s ease-out infinite;
    }

    .pulse-ring:nth-child(2) { animation-delay: 0.5s; }
    .pulse-ring:nth-child(3) { animation-delay: 1s; }

    @keyframes pulse-out {
      0% { transform: scale(1); opacity: 0.6; }
      100% { transform: scale(1.4); opacity: 0; }
    }

    /* Logo container */
    .logo-container {
      position: relative;
      display: inline-block;
    }

    .logo-glow {
      position: absolute;
      inset: -20px;
      background: radial-gradient(circle, rgba(239, 68, 68, 0.3) 0%, transparent 70%);
      filter: blur(20px);
      z-index: 0;
    }

    .logo-img {
      position: relative;
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 3px solid rgba(239, 68, 68, 0.5);
      object-fit: cover;
      z-index: 1;
    }

    /* Main card */
    .gym-card {
      background: rgba(26, 26, 26, 0.8);
      backdrop-filter: blur(16px);
      border: 1px solid rgba(239, 68, 68, 0.15);
      border-radius: 24px;
      overflow: hidden;
    }

    /* Tagline badge */
    .tagline-badge {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 6px 14px;
      background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(249, 115, 22, 0.2));
      border: 1px solid rgba(239, 68, 68, 0.3);
      border-radius: 20px;
      font-size: 11px;
      font-weight: 600;
      color: var(--fire);
      text-transform: uppercase;
      letter-spacing: 1.5px;
    }

    /* Title */
    .gym-title {
      font-size: 2.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      background: linear-gradient(135deg, #fff, #e5e5e5);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }

    /* Stats row */
    .stats-row {
      display: flex;
      justify-content: center;
      gap: 2rem;
      padding: 1rem 0;
      border-top: 1px solid rgba(255, 255, 255, 0.05);
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .stat-item {
      text-align: center;
    }

    .stat-value {
      font-family: 'Oswald', sans-serif;
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--fire);
    }

    .stat-label {
      font-size: 10px;
      color: var(--steel);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    /* Link buttons */
    .gym-link {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem 1.25rem;
      background: rgba(239, 68, 68, 0.08);
      border: 1px solid rgba(239, 68, 68, 0.15);
      border-radius: 14px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .gym-link::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
      background: linear-gradient(to bottom, var(--fire), var(--ember));
      opacity: 0.5;
      transition: opacity 0.3s;
    }

    .gym-link:hover {
      background: rgba(239, 68, 68, 0.15);
      border-color: rgba(239, 68, 68, 0.4);
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(239, 68, 68, 0.15);
    }

    .gym-link:hover::before {
      opacity: 1;
    }

    .link-icon {
      width: 44px;
      height: 44px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, var(--fire), var(--ember));
      flex-shrink: 0;
    }

    /* CTA button */
    .cta-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      padding: 16px 32px;
      background: linear-gradient(135deg, var(--fire), var(--ember));
      border-radius: 14px;
      font-family: 'Oswald', sans-serif;
      font-size: 1.1rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: white;
      transition: all 0.3s ease;
      box-shadow: 0 4px 20px rgba(239, 68, 68, 0.3);
    }

    .cta-btn:hover {
      transform: translateY(-3px) scale(1.02);
      box-shadow: 0 8px 30px rgba(239, 68, 68, 0.4);
    }

    /* Motto */
    .motto {
      font-family: 'Oswald', sans-serif;
      font-size: 1.25rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 3px;
      background: linear-gradient(135deg, var(--fire), var(--ember));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }

    /* Fade animations */
    .fade-in {
      opacity: 0;
      transform: translateY(15px);
      transition: all 0.6s ease;
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Reduced motion */
    @media (prefers-reduced-motion: reduce) {
      *, .pulse-ring {
        animation: none !important;
        transition: none !important;
      }
    }
  </style>

  <!-- Energy background -->
  <div class="energy-bg"></div>

  <div class="relative z-10 max-w-md mx-auto px-4 py-10">
    
    <!-- Header Card -->
    <div class="gym-card p-8 mb-6 text-center fade-in">
      <!-- Logo with pulse rings -->
      <div class="logo-container mb-6">
        <div class="logo-glow"></div>
        <div class="pulse-ring"></div>
        <div class="pulse-ring"></div>
        <div class="pulse-ring"></div>
        <img src="/images/reveal-logo.png" alt="Reveal Fitness" class="logo-img">
      </div>

      <div class="tagline-badge mb-4">
        <span>ðŸ’ª</span>
        <span>{tagline}</span>
      </div>

      <h1 class="gym-title mb-3">{title}</h1>
      <p class="motto mb-4">We Kick Ass</p>
      <p class="text-gray-400 text-sm leading-relaxed mb-6">{bio}</p>

      <!-- Stats -->
      <div class="stats-row">
        <div class="stat-item">
          <div class="stat-value">1%</div>
          <div class="stat-label">Better Daily</div>
        </div>
        <div class="stat-item">
          <div class="stat-value">24/7</div>
          <div class="stat-label">Access</div>
        </div>
        <div class="stat-item">
          <div class="stat-value">100+</div>
          <div class="stat-label">Members</div>
        </div>
      </div>
    </div>

    <!-- Links Section -->
    <div class="space-y-3 mb-6 fade-in">
      <a href="#" class="gym-link group" onclick="alert('Review link coming soon!'); return false;">
        <div class="link-icon">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        </div>
        <div class="flex-1">
          <div class="text-white font-semibold">Leave a Review</div>
          <div class="text-gray-500 text-xs">Share your experience</div>
        </div>
        <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>

      <a href="#" class="gym-link group" onclick="alert('Website coming soon!'); return false;">
        <div class="link-icon">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
          </svg>
        </div>
        <div class="flex-1">
          <div class="text-white font-semibold">Website</div>
          <div class="text-gray-500 text-xs">Coming soon</div>
        </div>
        <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    <!-- CTA -->
    <div class="text-center fade-in">
      <a href="#" class="cta-btn" onclick="alert('Join link coming soon!'); return false;">
        <span>Start Your Journey</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
      <p class="text-gray-600 text-xs mt-4">Green Bay, WI</p>
    </div>

  </div>

  <script>
    // Fade in animations
    function initAnimations() {
      const elements = document.querySelectorAll('.fade-in');
      elements.forEach((el, i) => {
        setTimeout(() => {
          el.classList.add('visible');
        }, 100 + (i * 150));
      });
    }

    document.addEventListener('DOMContentLoaded', initAnimations);
  </script>
</LinkPageLayout>
