    </div>

    <!-- Products/Services Section -->
    <div class="mb-8">
      <h2 class="font-display text-lg font-semibold text-slate-300 mb-4 flex items-center gap-2">
        <span class="w-8 h-px bg-gradient-to-r from-transparent to-indigo-500"></span>
        Shop & Services
        <span class="w-8 h-px bg-gradient-to-l from-transparent to-indigo-500"></span>
      </h2>
      <div class="grid gap-3">
        {products.map(product => (
          <a href={product.href} class="product-card p-4 flex items-center gap-4 group">
            {product.badge && <span class="badge">{product.badge}</span>}
            <div class={`w-12 h-12 rounded-xl bg-gradient-to-br ${product.gradient} flex items-center justify-center text-xl shadow-lg`}>
              {product.icon === 'calendar' && 'üìÖ'}
              {product.icon === 'play' && 'üé¨'}
              {product.icon === 'download' && 'üì¶'}
              {product.icon === 'shop' && 'üëï'}
            </div>
            <div class="flex-1 min-w-0">
              <div class="font-semibold text-white group-hover:text-indigo-300 transition-colors">{product.label}</div>
              <div class="text-slate-500 text-sm">{product.description}</div>
            </div>
            <div class="text-right">
              <div class="font-bold text-emerald-400">{product.price}</div>
              <div class="text-slate-600 text-xs">View ‚Üí</div>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Spotify Embed -->
    <div class="mb-8">
      <h2 class="font-display text-lg font-semibold text-slate-300 mb-4 flex items-center gap-2">
        <span class="w-8 h-px bg-gradient-to-r from-transparent to-emerald-500"></span>
        Now Playing
        <span class="w-8 h-px bg-gradient-to-l from-transparent to-emerald-500"></span>
      </h2>
      <div class="spotify-embed glow-box">
        <iframe 
          src={spotifyEmbed}
          width="100%" 
          height="152" 
          frameborder="0" 
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
