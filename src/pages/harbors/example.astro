      </div>
      
      <h1 class="font-display text-4xl md:text-5xl font-bold text-white mb-3 glow-text">
        Digital Harbor
      </h1>
      
      <p class="text-slate-400 text-lg mb-4 max-w-md mx-auto">
        {bio}
      </p>

      <!-- Quick stats -->
      <div class="flex justify-center gap-6 mb-6">
        {stats.map(stat => (
          <div class="text-center">
            <div class="stat-value text-2xl font-bold">{stat.value}</div>
            <div class="text-slate-500 text-xs uppercase tracking-wider">{stat.label}</div>
          </div>
        ))}
      </div>

      <!-- Scroll indicator -->
      <div class="scroll-indicator text-slate-600 mt-4">
        <svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>

    <!-- Featured Content: Video -->
    <div class="mb-8 glow-box rounded-2xl overflow-hidden">
      <div class="relative" style="padding-bottom: 56.25%;">
        <iframe 
          class="absolute inset-0 w-full h-full"
          src={featuredVideo}
          title="Featured Video"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
      <div class="bg-slate-900/80 backdrop-blur px-4 py-3 flex items-center justify-between">
        <span class="text-sm text-slate-400">üì∫ Latest Video</span>
        <span class="text-xs text-emerald-400 flex items-center gap-1">
          <span class="w-2 h-2 bg-emerald-400 rounded-full pulse-live"></span>
          12.5K views
        </span>
      </div>
    </div>

    <!-- Social Links with Follower Counts -->
    <div class="mb-8">
      <h2 class="font-display text-lg font-semibold text-slate-300 mb-4 flex items-center gap-2">
        <span class="w-8 h-px bg-gradient-to-r from-transparent to-indigo-500"></span>
        Follow Me
        <span class="w-8 h-px bg-gradient-to-l from-transparent to-indigo-500"></span>
      </h2>
      <div class="grid grid-cols-2 gap-3">
        {socialLinks.map(link => (
          <a 
            href={link.href}
            class={`link-premium p-4 flex items-center gap-3 bg-gradient-to-r ${link.gradient}`}
            target="_blank"
            rel="noopener"
          >
            <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
              <span class="text-lg">
                {link.icon === 'instagram' && 'üì∏'}
                {link.icon === 'tiktok' && 'üéµ'}
                {link.icon === 'youtube' && '‚ñ∂Ô∏è'}
                {link.icon === 'twitter' && 'ùïè'}
              </span>
            </div>
            <div class="flex-1 min-w-0">
              <div class="font-semibold text-white text-sm">{link.label}</div>
              <div class="text-white/60 text-xs">{link.followers} followers</div>
            </div>
          </a>
        ))}
