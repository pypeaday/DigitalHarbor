            </svg>
          </div>
          <div class="flex-1">
            <div class="text-white font-semibold">Instagram</div>
            <div class="text-gray-400 text-xs">@caribbean_kingss</div>
          </div>
          <svg class="w-5 h-5 text-gray-500 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Featured Video -->
    <div class="mb-6 fade-in">
      <div class="section-label">
        <span>ðŸŽµ</span>
        <span>Featured</span>
      </div>
      <div class="video-wrapper">
        <div class="video-container">
          <iframe 
            src="https://www.youtube.com/embed/_4WcbWNFQpo?si=dcZHTtOpBFrHKm-8" 
            title="Caribbean Kings Performance"
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>

    <!-- Book CTA -->
    <div class="text-center fade-in">
      <a href="http://instagram.com/caribbean_kingss" class="book-btn" target="_blank" rel="noopener">
        <span>Book Us</span>
        <span>ðŸŒ´</span>
      </a>
      <p class="text-gray-500 text-xs mt-4">DM for bookings & inquiries</p>
    </div>

  </div>

  <script>
    // Fade in animations
    function initAnimations() {
      const elements = document.querySelectorAll('.fade-in');
      elements.forEach((el, i) => {
        setTimeout(() => {
          el.classList.add('visible');
        }, 100 + (i * 150));
      });
    }

    document.addEventListener('DOMContentLoaded', initAnimations);
  </script>
</LinkPageLayout>
