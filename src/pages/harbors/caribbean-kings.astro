---
import LinkPageLayout from '../../layouts/LinkPageLayout.astro';

const title = "Caribbean Kings";
const description = "Caribbean Kings Entertainment - Bringing the islands to you";
const bio = "Authentic Caribbean vibes for every occasion. We bring the rhythm, energy, and soul of the islands to life.";
---

<LinkPageLayout 
  title={title} 
  description={description}
  themeColor="#00b347"
  bgGradient="from-[#0a1a0f] via-[#0f2518] to-[#0a1a0f]"
>
  <link slot="head" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <style>
    :root {
      --palm: #00b347;
      --sun: #ffc107;
      --ocean: #00bcd4;
      --sand: #ffe082;
    }

    * { font-family: 'Poppins', sans-serif; }

    /* Tropical gradient background */
    .tropical-bg {
      position: fixed;
      inset: 0;
      background: 
        radial-gradient(ellipse at top right, rgba(0, 179, 71, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse at bottom left, rgba(255, 193, 7, 0.1) 0%, transparent 50%),
        radial-gradient(ellipse at center, rgba(0, 188, 212, 0.05) 0%, transparent 70%);
      pointer-events: none;
      z-index: 0;
    }

    /* Palm leaf decorations */
    .palm-leaf {
      position: fixed;
      font-size: 4rem;
      opacity: 0.15;
      pointer-events: none;
      z-index: 0;
    }

    .palm-1 { top: 5%; left: -20px; transform: rotate(-30deg); }
    .palm-2 { top: 40%; right: -30px; transform: rotate(30deg) scaleX(-1); }
    .palm-3 { bottom: 10%; left: -10px; transform: rotate(-15deg); }

    /* Crown icon */
    .crown-container {
      position: relative;
      display: inline-block;
      margin-bottom: 1rem;
    }

    .crown {
      font-size: 4rem;
      filter: drop-shadow(0 0 20px rgba(255, 193, 7, 0.5));
      animation: crown-glow 3s ease-in-out infinite;
    }

    @keyframes crown-glow {
      0%, 100% { filter: drop-shadow(0 0 20px rgba(255, 193, 7, 0.5)); }
      50% { filter: drop-shadow(0 0 30px rgba(255, 193, 7, 0.8)); }
    }

    /* Title styling */
    .island-title {
      font-size: 2.5rem;
      font-weight: 800;
      background: linear-gradient(135deg, var(--palm), var(--sun), var(--ocean));
      background-size: 200% 200%;
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      animation: gradient-shift 4s ease infinite;
    }

    @keyframes gradient-shift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    /* Card styling */
    .island-card {
      background: rgba(15, 37, 24, 0.7);
      backdrop-filter: blur(16px);
      border: 1px solid rgba(0, 179, 71, 0.2);
      border-radius: 20px;
      overflow: hidden;
    }

    /* Link buttons */
    .island-link {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem 1.25rem;
      background: rgba(0, 179, 71, 0.1);
      border: 1px solid rgba(0, 179, 71, 0.2);
      border-radius: 14px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .island-link::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
      background: linear-gradient(to bottom, var(--palm), var(--sun));
      opacity: 0.6;
      transition: opacity 0.3s;
    }

    .island-link:hover {
      background: rgba(0, 179, 71, 0.2);
      border-color: rgba(255, 193, 7, 0.4);
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(0, 179, 71, 0.2);
    }

    .island-link:hover::before {
      opacity: 1;
    }

    /* Video container */
    .video-wrapper {
      position: relative;
      border-radius: 16px;
      overflow: hidden;
      border: 2px solid rgba(255, 193, 7, 0.3);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .video-wrapper::before {
      content: 'ðŸŽ¬ LIVE VIBES';
      position: absolute;
      top: 12px;
      right: 12px;
      padding: 4px 12px;
      background: linear-gradient(135deg, var(--palm), var(--ocean));
      border-radius: 20px;
      font-size: 10px;
      font-weight: 700;
      color: white;
      z-index: 10;
      letter-spacing: 1px;
    }

    .video-container {
      position: relative;
      padding-top: 56.25%;
    }

    .video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    /* Section labels */
    .section-label {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 6px 14px;
      background: rgba(255, 193, 7, 0.1);
      border: 1px solid rgba(255, 193, 7, 0.2);
      border-radius: 20px;
      font-size: 11px;
      font-weight: 600;
      color: var(--sun);
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 1rem;
    }

    /* CTA button */
    .book-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 14px 28px;
      background: linear-gradient(135deg, var(--palm), var(--ocean));
      border-radius: 14px;
      font-weight: 700;
      color: white;
      transition: all 0.3s ease;
      box-shadow: 0 4px 20px rgba(0, 179, 71, 0.3);
    }

    .book-btn:hover {
      transform: translateY(-3px) scale(1.02);
      box-shadow: 0 8px 30px rgba(0, 179, 71, 0.4);
    }

    /* Fade animations */
    .fade-in {
      opacity: 0;
      transform: translateY(15px);
      transition: all 0.6s ease;
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Reduced motion */
    @media (prefers-reduced-motion: reduce) {
      *, .crown, .island-title {
        animation: none !important;
        transition: none !important;
      }
    }
  </style>

  <!-- Tropical background -->
  <div class="tropical-bg"></div>
  
  <!-- Palm decorations -->
  <div class="palm-leaf palm-1">ðŸŒ´</div>
